<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.smartmuseum.controller.EmployeeManagementController"
      spacing="20.0">

    <children>
        <!-- Blue Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #3498db; -fx-padding: 20;">
            <children>
                <Label text="ðŸ‘¥ Employee Management System" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblTotalEmployees" text="Total Employees: 0" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Main Content -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Left Panel - Employee Form -->
                <VBox spacing="15.0"
                      style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 8, 0, 0, 2);"
                      prefWidth="350.0">
                    <children>
                        <Label text="Employee Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <!-- Form Fields -->
                        <GridPane hgap="10.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Name:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Position:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ComboBox fx:id="cmbPosition" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />

                            <Label text="Hire Date:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <DatePicker fx:id="dateHireDate" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Salary:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtSalary" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        </GridPane>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnAdd" onAction="#handleAdd" text="âž• Add"
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnUpdate" onAction="#handleUpdate" text="âœï¸ Update"
                                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnDelete" onAction="#handleDelete" text="ðŸ—‘ï¸ Delete"
                                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnClear" onAction="#handleClear" text="ðŸ”„ Clear"
                                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Status Message -->
                        <Label fx:id="lblStatus" text="Ready to manage employees"
                               style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12;"
                               wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <!-- Right Panel - Employee Table -->
                <VBox spacing="15.0"
                      style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 8, 0, 0, 2);"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="ðŸ“‹ Employee List" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="ðŸ”„ Refresh"
                                        style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                            </children>
                        </HBox>

                        <TableView fx:id="tableEmployees" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colEmployeeId" text="ID" prefWidth="50.0" />
                                <TableColumn fx:id="colName" text="Name" prefWidth="150.0" />
                                <TableColumn fx:id="colPosition" text="Position" prefWidth="120.0" />
                                <TableColumn fx:id="colQRCode" text="QR Code" prefWidth="150.0" />
                                <TableColumn fx:id="colHireDate" text="Hire Date" prefWidth="100.0" />
                                <TableColumn fx:id="colSalary" text="Salary" prefWidth="100.0" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </children>
</VBox>