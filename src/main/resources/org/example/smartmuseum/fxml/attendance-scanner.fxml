<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.smartmuseum.controller.AttendanceController"
      spacing="20.0" styleClass="tab-content">

    <children>
        <!-- Header -->
        <Label text="ðŸ“Š Employee Attendance Scanner" styleClass="section-title">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Main Content -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Left Panel - Camera Scanner -->
                <VBox spacing="15.0" styleClass="scanner-panel" prefWidth="400.0">
                    <children>
                        <Label text="QR Code Camera Scanner" styleClass="panel-title">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <!-- Camera View -->
                        <VBox alignment="CENTER" spacing="10.0" styleClass="camera-container" prefHeight="300.0">
                            <children>
                                <ImageView fx:id="cameraView" fitHeight="250.0" fitWidth="350.0" preserveRatio="true" />
                                <Label fx:id="lblCameraStatus" text="Camera not started" styleClass="camera-status" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                        <!-- Camera Controls -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnStartCamera" onAction="#handleStartCamera"
                                        styleClass="btn-camera" text="ðŸ“¹ Start Camera">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnStopCamera" onAction="#handleStopCamera"
                                        styleClass="btn-camera-stop" text="â¹ Stop Camera">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Manual QR Input -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Manual QR Code Input:" styleClass="form-label">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtQRInput" promptText="Enter QR code manually..." />
                                <Button fx:id="btnProcessQR" onAction="#handleProcessQR"
                                        styleClass="btn-process" text="ðŸ” Process QR Code">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>

                        <!-- Scan Result -->
                        <Label fx:id="lblScanResult" text="Ready to scan..." styleClass="status-message" wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <!-- Right Panel - Attendance Table -->
                <VBox spacing="15.0" styleClass="table-panel" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Recent Attendance Records" styleClass="panel-title">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="tableAttendance" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colEmployeeName" text="Employee Name" prefWidth="150.0" />
                                <TableColumn fx:id="colAction" text="Action" prefWidth="100.0" />
                                <TableColumn fx:id="colTimestamp" text="Timestamp" prefWidth="150.0" />
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
