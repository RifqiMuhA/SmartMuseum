<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.smartmuseum.controller.QRGeneratorController"
      spacing="20.0" styleClass="tab-content">

    <children>
        <!-- Header -->
        <Label text="ðŸ”² QR Code Generator" styleClass="section-title">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Main Content -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Left Panel - QR Generation Controls -->
                <VBox spacing="15.0" styleClass="form-panel" prefWidth="400.0">
                    <children>
                        <Label text="QR Code Configuration" styleClass="panel-title">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <!-- QR Type Selection -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="QR Code Type:" styleClass="form-label">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbQRType" prefWidth="350.0" />
                            </children>
                        </VBox>

                        <!-- Employee Selection (for Employee QR) -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Select Employee:" styleClass="form-label">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbEmployee" prefWidth="350.0" />
                            </children>
                        </VBox>

                        <!-- Custom Data Input (for Custom QR) -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Custom Data:" styleClass="form-label">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="txtCustomData" prefRowCount="4" prefWidth="350.0"
                                          promptText="Enter custom data for QR code..." />
                            </children>
                        </VBox>

                        <!-- Generation Controls -->
                        <HBox spacing="15.0" alignment="CENTER">
                            <children>
                                <Button fx:id="btnGenerate" styleClass="btn-generate" text="ðŸ”² Generate QR Code">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnSave" styleClass="btn-save" text="ðŸ’¾ Save QR Code">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Status -->
                        <Label fx:id="lblStatus" text="Ready to generate QR codes"
                               styleClass="status-message" wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <!-- Right Panel - QR Code Display -->
                <VBox spacing="15.0" styleClass="form-panel" prefWidth="400.0">
                    <children>
                        <Label text="Generated QR Code" styleClass="panel-title">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <!-- QR Code Image -->
                        <VBox alignment="CENTER" spacing="15.0" styleClass="qr-display-container">
                            <children>
                                <ImageView fx:id="imgQRCode" fitHeight="300.0" fitWidth="300.0"
                                           preserveRatio="true" styleClass="qr-image" />

                                <Label fx:id="lblQRData" text="QR Data: -" styleClass="qr-data-label"
                                       wrapText="true" prefWidth="350.0">
                                    <font>
                                        <Font name="System" size="11.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>

                        <!-- Instructions -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="ðŸ“‹ Instructions:" styleClass="panel-subtitle">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="1. Select QR code type (Employee or Custom)" styleClass="instruction-text" />
                                <Label text="2. Choose employee or enter custom data" styleClass="instruction-text" />
                                <Label text="3. Click 'Generate QR Code'" styleClass="instruction-text" />
                                <Label text="4. Save the QR code as PNG file" styleClass="instruction-text" />
                                <Label text="5. Use QR code for attendance scanning" styleClass="instruction-text" />
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
