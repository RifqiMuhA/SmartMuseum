<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.smartmuseum.controller.UserManagementController"
      spacing="20.0" styleClass="tab-content">

    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="👤 User Management System" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblTotalUsers" text="Total Users: 0" styleClass="info-label">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Main Content -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Left Panel - User Form -->
                <VBox spacing="15.0" styleClass="form-panel" prefWidth="350.0">
                    <children>
                        <Label text="User Information" styleClass="panel-title">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <!-- Form Fields -->
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Username:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Password:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Phone:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Role:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <ComboBox fx:id="cmbRole" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        </GridPane>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnAdd" onAction="#handleAdd" styleClass="btn-add" text="➕ Add">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnUpdate" onAction="#handleUpdate" styleClass="btn-update" text="✏️ Update">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnDelete" onAction="#handleDelete" styleClass="btn-delete" text="🗑️ Delete">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnClear" onAction="#handleClear" styleClass="btn-clear" text="🔄 Clear">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Status Message -->
                        <Label fx:id="lblStatus" text="Ready to manage users" styleClass="status-message" wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <!-- Right Panel - User Table -->
                <VBox spacing="15.0" styleClass="table-panel" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="User List" styleClass="panel-title">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button onAction="#handleRefresh" styleClass="btn-nav" text="🔄 Refresh">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <TableView fx:id="tableUsers" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colUserId" text="ID" prefWidth="50.0" />
                                <TableColumn fx:id="colUsername" text="Username" prefWidth="120.0" />
                                <TableColumn fx:id="colEmail" text="Email" prefWidth="180.0" />
                                <TableColumn fx:id="colPhone" text="Phone" prefWidth="120.0" />
                                <TableColumn fx:id="colRole" text="Role" prefWidth="100.0" />
                                <TableColumn fx:id="colCreatedAt" text="Created" prefWidth="150.0" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
